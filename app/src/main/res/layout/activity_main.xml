<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/mainact_tam_logo"
        android:layout_height="@dimen/mainact_tam_logo"
        android:layout_marginTop="@dimen/mainact_margintop_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mainact_margin_items_form"
        android:layout_marginTop="@dimen/mainact_margin_items_form"
        android:layout_marginEnd="@dimen/mainact_margin_items_form"
        android:hint="@string/mainact_et_email"
        android:ems="@integer/mainact_et_fontsize"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mainact_margin_items_form"
        android:layout_marginEnd="@dimen/mainact_margin_items_form"
        android:ems="@integer/mainact_et_fontsize"
        android:hint="@string/mainact_et_pass"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainact_btn_entrar"
        android:layout_marginStart="@dimen/mainact_margin_items_form"
        android:layout_marginEnd="@dimen/mainact_margin_items_form"
        android:layout_marginTop="@dimen/mainact_margin_items_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"/>

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainact_btn_registo"
        android:layout_marginStart="@dimen/mainact_margin_items_form"
        android:layout_marginEnd="@dimen/mainact_margin_items_form"
        android:backgroundTint="@color/color_secundario"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEntrar" />

    <TextView
        android:id="@+id/textViewVersionApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mainact_margin_items_form"
        android:layout_marginBottom="@dimen/mainact_margin_items_form"
        android:text="@string/mainact_tv_versionApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>